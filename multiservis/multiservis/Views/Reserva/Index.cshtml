
@{
    ViewBag.Title = "Solicitar Servicio";
}
<div class="container">

    <div class="row">
        <center>
            <p class="white-text flow-text"><b>Solicitar Servicio</b></p>
        </center>
        <hr>
        <br>
    </div>

    <div class="row">
        <div class="col s12 l6 m6">
            <div class="card-panel white-text teal">
                <h5>
                    <span class="icon-wrench"></span>
                    <b>Costo Total: </b>
                    <span id="costoTotal">0.0</span>&nbsp;Bs.
                </h5>
            </div>
        </div>
        <div class="col s12 l6 m6">
            <div class="card-panel white-text light-blue darken-4">
                <h5>
                    <span class="icon-ok-squared"></span>
                    <b>Seleccionados: </b>
                    <span id="nro">0</span>
                </h5>
            </div>
        </div>
    </div>

    <div id="servicios" class="row"></div>

    <div class="row">
        <center>
            <a id="btnGuardar" class="btn btn-large green disabled"><b>SOLICITAR&nbsp;SERVICIOS</b></a>
        </center>
    </div>
    <div class="row">
        <center>
            <a onclick="CambiarPantalla()" class="btn btn-large black"><b>CAMBIAR</b></a>
        </center>
    </div>


    <!--AYUDA-->
    <div class="fixed-action-btn horizontal">
        <a class="btn-floating btn-large red pulse">
            <i class="icon-help-1"></i>
        </a>
        <ul>
            <li>
                <a class="btn-floating red" onclick="window.open('tel:67377487', '_system');"><i class="icon-phone"></i></a>
            </li>
            <li>
                <a class="btn-floating blue" onclick="window.open('https://m.me/ITDSTarija','_system');"><i class="icon-commenting"></i></a>
            </li>
            <li>
                <a class="btn-floating green" onclick="window.open('https://4m1lk4r.github.io/msg_itds','_system');"><i class="icon-whatsapp"></i></a>
            </li>
        </ul>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/reserva")
}


